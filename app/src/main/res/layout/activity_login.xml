<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    tools:context="com.design4web.tripii.Login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:src="@mipmap/tripper"
                android:id="@+id/logo"
                android:scaleType="fitXY"
                android:clickable="true"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="#fff"
                android:text="@string/trippr"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/logo"
                android:id="@+id/text12"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_below="@+id/text12"
                android:background="@drawable/corners"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:lines="1"
                android:textAlignment="center"
                android:hint="@string/email_id"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:padding="10dp"
                android:textAlignment="center"
                android:background="@drawable/corners"
                android:hint="@string/Password"
                android:lines="1"
                android:inputType="textPassword"
                android:layout_below="@+id/email"
                android:layout_marginTop="20dp"
                />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/login"
                android:layout_below="@+id/password"
                android:text="@string/login"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/buttonbg"
                android:textColor="#fff"
                android:textSize="20sp"

                />

            <com.facebook.login.widget.LoginButton
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="invisible"
                android:layout_below="@+id/login"
               />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/loginviafacebook"
                android:layout_below="@+id/login"
                android:text="@string/loginviafacebook"
                android:textStyle="bold"
                android:background="#214bbe"
                android:textColor="#fff"
                android:textSize="20sp"

                />

            <TextView
                android:id="@+id/or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/loginviafacebook"
                android:layout_centerHorizontal="true"
                android:layout_margin="20dp"
                android:text="@string/or"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signup"
                android:layout_below="@+id/or"
                android:text="@string/signup"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/buttonbg"
                android:textColor="#fff"

                />
        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
