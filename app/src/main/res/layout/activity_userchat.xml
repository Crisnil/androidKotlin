<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    tools:context="com.design4web.tripii.Userchat">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/username"
        android:textColor="#fff"
        android:visibility="gone"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@color/backgroundcolor"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#fff"
        android:text="@string/trippr"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:id="@+id/text"
        />
 <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#fff"
        android:text="@string/chatlist"
        android:textAlignment="center"
        android:textStyle="bold"
         android:layout_below="@+id/text"
        android:layout_marginTop="10dp"
        android:id="@+id/chatlist"
        />

    <ListView
        android:layout_below="@+id/chatlist"
        android:layout_above="@+id/writecomment"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listview"

        >
    </ListView>

        <EditText
            android:id="@+id/writecomment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/teacherlayourbg"
            android:hint="@string/messages"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:layout_marginBottom="20dp"
            android:paddingRight="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textColorHint="#fff"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitcomment"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/writecomment"
            android:layout_alignBottom="@+id/writecomment"
            android:layout_marginBottom="25dp"
            android:src="@mipmap/arrow"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:layout_marginRight="25dp"
            android:background="#0000"

            />





</RelativeLayout>
