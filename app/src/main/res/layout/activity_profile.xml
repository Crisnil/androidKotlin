<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:padding="20dp"
    tools:context="com.design4web.tripii.Profile">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#fff"
        android:text="@string/trippr"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/text"
        />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#fff"
        android:text="@string/userprofile"
        android:textAlignment="center"
        android:textStyle="bold"
          android:layout_margin="10dp"
        android:layout_below="@+id/text"
          android:id="@+id/userprofile"
        />


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/userimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/userprofile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            tools:srcCompat="@tools:sample/avatars"
            android:background="#ffff"/>/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="@string/nametext"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/userimage"
        android:id="@+id/nametext"
        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/username"
        android:paddingBottom="10dp"
        android:textColor="@color/backgroundcolor"
        android:enabled="false"
        android:layout_below="@+id/nametext"
        android:layout_marginTop="10dp"
        android:background="@drawable/corners"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#fff"
        android:text="Email"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/username"
        android:id="@+id/email"
        />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emailname"
        android:layout_below="@+id/email"
        android:enabled="false"
        android:textColor="@color/backgroundcolor"
        android:background="@drawable/corners"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="@string/membershiptext"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@+id/emailname"
            android:id="@+id/membershiptext"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#fff"
            android:text="@string/licencecode"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:layout_below="@+id/membershiptext"
            android:id="@+id/licence"
            />




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/update"
        android:text="@string/editprofile"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:layout_below="@+id/licence"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:background="@drawable/buttonbg1"
        android:textColor="#fff"

        />


    </RelativeLayout>


  </ScrollView>


</RelativeLayout>