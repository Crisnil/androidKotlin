<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:padding="20dp"
    tools:context="com.design4web.tripii.Joinclasstrip">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="#fff"
                android:text="@string/trippr"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/text"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:layout_below="@+id/text"
                android:text="@string/joinclasstrip"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/teacherprofile"
                />




            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tripname"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/teacherprofile"
                android:background="@drawable/corners"
                android:padding="10dp"
                android:lines="1"
                android:textStyle="bold"
                android:textAlignment="center"
                android:hint="@string/inputtripname"
                />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search"
                android:layout_below="@+id/tripname"
                android:text="@string/search"
                android:textAllCaps="false"
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold"
                android:background="@drawable/buttonbg"
                android:textColor="#fff"

                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search"
                android:layout_marginTop="20dp"
                android:id="@+id/tripinfo"
                android:visibility="gone"
                android:background="@drawable/corners"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:paddingTop="20dp"
                    android:text="@string/results"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:id="@+id/results"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                   android:background="#000"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/results"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:id="@+id/space"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingTop="20dp"
                    android:text="@string/studenttriprome"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_below="@+id/space"
                    android:id="@+id/studenttriprome"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:paddingTop="20dp"
                    android:text="@string/school"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_below="@+id/studenttriprome"
                    android:id="@+id/schoolname"
                    />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/trippassword"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/schoolname"
                    android:background="@drawable/trippasswordbg"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColorHint="#fff"
                    android:textColor="#fff"
                    android:lines="1"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:hint="@string/trippassword"
                    />




                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/join"
                    android:layout_below="@+id/trippassword"
                    android:text="@string/join"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    android:textSize="22sp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textStyle="bold"
                    android:background="@drawable/buttonbg"
                    android:textColor="#fff"
                    android:layout_marginBottom="20dp"

                    />




            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>


</RelativeLayout>