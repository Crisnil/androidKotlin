<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/backgroundcolor"
    android:layout_height="match_parent"
    tools:context="com.design4web.tripii.Tripcomment">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#fff"
        android:text="@string/trippr"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:layout_below="@+id/text"
        android:text="@string/teachertripov"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/teacherprofile"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:textStyle="bold"
        android:layout_below="@+id/teacherprofile"
        android:background="@drawable/corners"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:lines="4"
        android:enabled="false"
        android:textAlignment="center"
        android:hint="@string/description"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:textColor="#ec640f"
        android:layout_below="@+id/description"
        android:text="@string/duration"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/duration"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textColor="#ec640f"
        android:layout_below="@+id/duration"
        android:text="Status - "
        android:enabled="false"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/status"
        />

  <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:textColor="#ec640f"
        android:layout_below="@+id/status"
        android:text="@string/comments"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/commentstext"
        />






    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview"
        android:layout_above="@+id/writecomment"
        android:layout_below="@+id/commentstext"
        android:layout_marginTop="20dp"
        >

    </ListView>


    <EditText
        android:id="@+id/writecomment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/findstudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/teacherlayourbg"
        android:hint="@string/comment"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="30dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textColorHint="#fff"
         />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitcomment"
        android:layout_above="@+id/findstudent"
        android:layout_alignTop="@+id/writecomment"
        android:layout_alignBottom="@+id/writecomment"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/arrow"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:layout_marginRight="5dp"
        android:background="#0000"

        />




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/findstudent"
        android:layout_alignParentBottom="true"
        android:text="@string/findstudents"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/buttonbg"
        android:textColor="#fff"

        />



</RelativeLayout>
